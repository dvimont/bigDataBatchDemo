cd target
export HADOOP_CLASSPATH=bigdatademo01-1.0-SNAPSHOT.jar

rm -rf /home/dv/hdfsData/pageviews/pageviews.daily > ../logs/pageviewsdailyJob.log 2>&1
hadoop org.commonvox.bigdatademos.PageViewsDaily /home/dv/hdfsData/pageviews/pageviews.hourly.txt /home/dv/hdfsData/pageviews/pageviews.daily >> ../logs/pageviewsdailyJob.log 2>&1

rm -rf /home/dv/hdfsData/pageviews/pageviews.weekly > ../logs/pageviewsweeklyJob.log 2>&1
hadoop org.commonvox.bigdatademos.PageViewsWeekly /home/dv/hdfsData/pageviews/pageviews.daily /home/dv/hdfsData/pageviews/pageviews.weekly >> ../logs/pageviewsweeklyJob.log 2>&1

rm -rf /home/dv/hdfsData/pageviews/pageviews.monthly > ../logs/pageviewsmonthlyJob.log 2>&1
hadoop org.commonvox.bigdatademos.PageViewsMonthly /home/dv/hdfsData/pageviews/pageviews.daily /home/dv/hdfsData/pageviews/pageviews.monthly >> ../logs/pageviewsmonthlyJob.log 2>&1

rm -rf /home/dv/hdfsData/pageviews/pageviews.yearly > ../logs/pageviewsyearlyJob.log 2>&1
hadoop org.commonvox.bigdatademos.PageViewsYearly /home/dv/hdfsData/pageviews/pageviews.monthly /home/dv/hdfsData/pageviews/pageviews.yearly >> ../logs/pageviewsyearlyJob.log 2>&1

cd ..
